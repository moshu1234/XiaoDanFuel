<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fuel_list"
    android:background="@color/colorPrimaryLight">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/fuel_list_date"
        android:text="2016-07-31"
        android:textSize="@dimen/size_mini_plus"
        android:layout_width="@dimen/list_width"
        android:layout_height="@dimen/list_height_mini"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/fuel_list_mils"
        android:text="100000公里"
        android:textSize="@dimen/size_mini_plus"
        android:layout_width="@dimen/list_width"
        android:layout_height="@dimen/list_height_mini"
        android:gravity="center_vertical"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/fuel_list_fuelAverage"
        android:text="2.34升/百公里"
        android:textSize="@dimen/size_mini_plus"
        android:layout_width="@dimen/list_width"
        android:layout_height="@dimen/list_height_mini"
        android:gravity="center_vertical"
        android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/fuel_list_priceMiles"
            android:text="0.15元/公里"
            android:textSize="@dimen/size_mini"
            android:layout_width="@dimen/list_width"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/fuel_list_mileAdded"
            android:text="+200公里"
            android:textSize="@dimen/size_mini"
            android:layout_width="@dimen/list_width"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/fuel_list_fuelAverageDiff"
            android:text="0.34升/百公里"
            android:textSize="@dimen/size_mini"
            android:layout_width="@dimen/list_width"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/fuel_list_unitPrice"
            android:text="2016-07-31"
            android:textSize="@dimen/size_mini"
            android:layout_width="@dimen/list_width"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/fuel_list_totalPrice"
            android:text="100000公里"
            android:textSize="@dimen/size_mini"
            android:layout_width="@dimen/list_width"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/fuel_list_fuelCount"
            android:text="2.34升/百公里"
            android:textSize="@dimen/size_mini"
            android:layout_width="@dimen/list_width"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:id="@+id/fuel_list_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="备注:"/>
    </LinearLayout>
</LinearLayout>